{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.cjs",
    "tailwind.config.ts",
    "api",
    "**/*.js",
    "**/*.ts",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
