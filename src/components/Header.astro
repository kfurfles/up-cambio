---
import { appendToUrlContact } from "@/contansts/index";

import Logo from "./Logo.astro";

const URL_CONTACT = appendToUrlContact("");
---

<header class="header">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between py-4">
      <div class="lg:ml-0 lg:mr-auto">
        <Logo className="block" />
      </div>
      <div class="gap-4 md:gap-10 lg:flex">
        <a
          href={URL_CONTACT}
          target="_blank"
          class="w-fit h-9 min-h-9 bg-primary-x300 px-4 py-3 rounded-lg text-neutral-x100 flex items-center lg:min-h-12"
        >
          <span class="md:hidden">
            Quero contratar
          </span>
          <span class="hidden md:block">
            Agendar demonstração
          </span>
        </a>
      </div>
    </div>
  </div>
</header>

<style is:global lang="css"></style>
