---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../sections/Footer/Index.astro";
import Hero from "../sections/Hero/Index.astro";
import Devices from "../sections/Devices/Index.astro";
import Solutions from "../sections/Solutions/Index.astro";
import BussinesSections from "../sections/BussinesSections/Index.astro";
import Implementation from "../sections/Implementation/Index.astro";
import Benefits from "../sections/Benefits/Index.astro";
import Connect from "../sections/Connect/Index.astro";
import TrusSecurity from "../sections/TrusSecurity/Index.astro";
import FAQ from "../sections/Faq/Index.astro";
import Form from "../sections/Form/Index.astro";
---

<Layout title="Up Cambio">
  <div
    id="progress"
    class="bg-primary-x300"
  >
  </div>
  <main class="relative max-w-[100vw] overflow-hidden">
    <div class="relative z-30">
      <div class="bg-[url('/img/hero/bg-hero.png')] grid grid-cols-1">
        <Header />
        <Hero />
      </div>
      <Devices />
      <Solutions />
      <BussinesSections />
      <Implementation />
      <Benefits />
      <Connect />
      <TrusSecurity />
      <FAQ />
      <Form />
    </div>
  </main>
  <Footer />
</Layout>

<style is:global lang="css">
  @keyframes scroll-progress {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  #progress {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 5px;
    transform-origin: 0 50%;
    z-index: 99999;
    animation: scroll-progress auto linear;
    animation-timeline: scroll();
  }
</style>
